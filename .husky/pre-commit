#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running pre-commit checks..."
echo "Note: Currently using .eslintignore and .prettierignore to bypass existing errors."
echo "These should be removed once the codebase is properly fixed."

npm run lint || {
  echo "Linting failed! Fix the errors and try again."
  exit 1
}

npm run format:check || {
  echo "Code formatting check failed! Run 'npm run format' to fix formatting issues."
  exit 1
}

echo "All pre-commit checks passed!"
